<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sungdongfe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_regular</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/pink_regular</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">
            shortEdges <!-- default, shortEdges, never -->
        </item>
        <!-- Hide action bar  -->
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Bottom navigation theme.-->
    <style name="BottomNavTheme">
        <item name="android:fontFamily">@font/suit_regular</item>
        <item name="android:textSize">13dp</item>
    </style>
</resources>